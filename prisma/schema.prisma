// ==================== Generator ====================
generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

// ==================== Datasource ====================
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==================== Models ====================
model SensorReading {
  id          String   @id @default(cuid())
  temperature Float
  humidity    Float
  sound       Int
  peakToPeak  Float?
  timestamp   DateTime @default(now())

  @@map("sensor_readings")
}
